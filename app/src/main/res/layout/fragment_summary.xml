<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@color/off_white"
        tools:context=".Fragments.Summary">

        <TextView
            android:id="@+id/restaurant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/alice"
            tools:text="Restaurant: Burger King"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Price: 420$"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/alice"
            android:layout_below="@id/restaurant"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/serving"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="No of servings: 1"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/alice"
            android:layout_below="@id/price"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Type: Hamburger"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/alice"
            android:layout_below="@id/serving"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Rating: 80"
            android:fontFamily="@font/alice"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/type"
            android:textSize="25sp" />

    </RelativeLayout>
</ScrollView>